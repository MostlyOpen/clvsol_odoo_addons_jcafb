<odoo>

    <record id="clv_patient_code_pool_view_form" model="ir.ui.view">
        <field name="name">clv.patient.code_pool.form</field>
        <field name="model">clv.patient.code_pool</field>
        <field name="inherit_id" ref="clv_pool.clv_abstract_code_pool_view_form"/>
        <field name="mode">primary</field>
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="string">Patient Code Pool</attribute>
            </xpath>
            <div name="title" position="inside">
                <label for="patient_id" class="oe_edit_only"/>
                <h3><field name="patient_id" placeholder="Patient..."/></h3>
            </div>
            <group name="settings_left" position="inside">
                <field name="id"/>
            </group>
        </field>
    </record>

    <record id="clv_patient_code_pool_view_tree" model="ir.ui.view">
        <field name="name">clv.patient.code_pool.tree</field>
        <field name="model">clv.patient.code_pool</field>
        <field name="inherit_id" ref="clv_pool.clv_abstract_code_pool_view_tree" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="string">Patient Code Pools</attribute>
            </xpath>
            <field name="notes" position="before">
                <field name="patient_id"/>
            </field>
            <field name="notes" position="after">
                <field name="id"/>
            </field>
        </field>
    </record>

    <record id="clv_patient_code_pool_view_search" model="ir.ui.view">
        <field name="name">clv.patient.code_pool.search</field>
        <field name="model">clv.patient.code_pool</field>
        <field name="inherit_id" ref="clv_pool.clv_abstract_code_pool_view_search" />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//search" position="attributes">
                <attribute name="string">Patient Code Pools</attribute>
            </xpath>
            <field name="notes" position="after">
                <field name="id"/>
            </field>
        </field>
    </record>

    <record id="clv_patient_code_pool_action" model="ir.actions.act_window">
        <field name="name">Patient Code Pools</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">clv.patient.code_pool</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="clv_patient_code_pool_view_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Click to add a new patient code_pool.
          </p>
        </field>
    </record>
    
</odoo>
