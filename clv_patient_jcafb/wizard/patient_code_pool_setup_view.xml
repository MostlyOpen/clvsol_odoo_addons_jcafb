<odoo>

    <record id="clv_patient_code_pool_setup_view_form" model="ir.ui.view">
        <field name="name">clv.patient.code_pool_setup.form</field>
        <field name="model">clv.patient.code_pool_setup</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_right">
                </div>
                <label for="pool_instance_ids"/>
                <field name="pool_instance_ids" options="{'no_open': False, 'no_create': True}"/>
                <group>
                    <group>
                        <field name="quantity"/>
                    </group>
                </group>
                <footer>
                    <button 
                        type="object"
                        name="do_patient_code_pool_setup"
                        string="Code Pool Setup"
                        class="oe_highlight"
                        />
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>

        </field>
    </record>

    <!-- More button Action -->
    <record id="clv_patient_code_pool_setup_action" model="ir.actions.act_window">
        <field name="name">Patient Code Pool Setup</field>
        <field name="binding_model_id" ref="clv_pool.model_clv_pool_instance"/>
        <field name="res_model">clv.patient.code_pool_setup</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
