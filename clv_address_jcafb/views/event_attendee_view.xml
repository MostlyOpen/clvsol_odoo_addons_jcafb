<odoo>
        
    <record id="clv_address_view_form_event_attendee" model="ir.ui.view">
        <field name="name">clv.address.form</field>
        <field name="model">clv.address</field>
        <field name="inherit_id" ref="clv_address.clv_address_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <page name="settings" position="before">
                <page string="Events">
                    <group>
                        <group>
                            <field name="count_events"/>
                        </group>
                        <group>
                            <button name="clv_event.clv_event_attendee_action"
                                    type="action"
                                    class="oe_stat_button"
                                    icon="fa-list"
                                    context="{'search_default_ref_name': name, 'search_default_ref_code': code, 'search_default_group_by_event_phase_id': 1}"
                                    attrs="{'invisible': [('count_events_2', '=', 0)]}"
                                    >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="count_events_2"/>
                                    </span>
                                    <span class="o_stat_text"> Events(s)</span>
                                </div>
                            </button>
                        </group>
                    </group>
                    <field name="event_attendee_ids" colspan="4" nolabel="1"/>
                </page>
            </page>
        </field>
    </record>

    <record id="clv_address_view_tree_event_attendee" model="ir.ui.view">
        <field name="name">clv.address.tree</field>
        <field name="model">clv.address</field>
        <field name="inherit_id" ref="clv_address.clv_address_view_tree"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <field name="email" position="before">
                <field name="count_events" invisible="True"/>
            </field>
        </field>
    </record>

</odoo>
